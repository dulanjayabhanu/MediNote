<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splashScreenConstraintLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background1"
    tools:context=".SplashScreenActivity">

    <ImageView
        android:id="@+id/splashScreenImageView1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.459"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/splashScreenTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/app_name"
        android:textColor="@color/primary_color_black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/splashScreenImageView1"
        app:layout_constraintStart_toStartOf="@+id/splashScreenImageView1"
        app:layout_constraintTop_toBottomOf="@+id/splashScreenImageView1" />
</androidx.constraintlayout.widget.ConstraintLayout>