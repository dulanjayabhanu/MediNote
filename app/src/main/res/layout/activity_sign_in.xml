<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_color_white"
    tools:context=".SignInActivity">

    <TextView
        android:id="@+id/signInTextView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/inter_bold"
        android:text="@string/sign_in"
        android:textColor="@color/primary_color_black"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/signInTextView2"
        app:layout_constraintEnd_toEndOf="@+id/signInEditText4"
        app:layout_constraintStart_toStartOf="@+id/signInEditText1" />

    <TextView
        android:id="@+id/signInTextView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/inter_regular"
        android:text="@string/please_enter_your_4_digit_password"
        android:textColor="@color/secondary_color_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/signInEditText1"
        app:layout_constraintEnd_toEndOf="@+id/signInEditText4"
        app:layout_constraintStart_toStartOf="@+id/signInEditText1" />

    <EditText
        android:id="@+id/signInEditText1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/input_field_background1"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:inputType="number|numberPassword"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/primary_color_green"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/signInEditText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/signInEditText2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_weight="1"
        android:background="@drawable/input_field_background1"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:inputType="number|numberPassword"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/primary_color_green"
        app:layout_constraintBottom_toBottomOf="@+id/signInEditText1"
        app:layout_constraintEnd_toStartOf="@+id/signInEditText3"
        app:layout_constraintStart_toEndOf="@+id/signInEditText1"
        app:layout_constraintTop_toTopOf="@+id/signInEditText1" />

    <EditText
        android:id="@+id/signInEditText3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/input_field_background1"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:inputType="number|numberPassword"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/primary_color_green"
        app:layout_constraintBottom_toBottomOf="@+id/signInEditText1"
        app:layout_constraintEnd_toStartOf="@+id/signInEditText4"
        app:layout_constraintStart_toEndOf="@+id/signInEditText2"
        app:layout_constraintTop_toTopOf="@+id/signInEditText1" />

    <EditText
        android:id="@+id/signInEditText4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="32dp"
        android:layout_weight="1"
        android:background="@drawable/input_field_background1"
        android:ems="10"
        android:fontFamily="@font/inter_regular"
        android:inputType="number|numberPassword"
        android:maxLength="1"
        android:maxLines="1"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="12dp"
        android:textAlignment="center"
        android:textColor="@color/primary_color_green"
        app:layout_constraintBottom_toBottomOf="@+id/signInEditText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/signInEditText3"
        app:layout_constraintTop_toTopOf="@+id/signInEditText1"
        app:layout_constraintVertical_bias="0.526" />

    <TextView
        android:id="@+id/signInTextview3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_regular"
        android:text="@string/do_not_have_an_account"
        android:textColor="@color/secondary_color_black"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/signInNewAccountButton"
        app:layout_constraintEnd_toEndOf="@+id/signInNewAccountButton"
        app:layout_constraintStart_toStartOf="@+id/signInNewAccountButton" />

    <Button
        android:id="@+id/signInNewAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/primary_color_transparent"
        android:fontFamily="@font/inter_regular"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/new_account"
        android:textColor="@color/primary_color_green"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>